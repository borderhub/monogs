{
  "name": "monogs",
  "version": "1.0.0",
  "description": "monogs.net - Next.js migration from Ghost CMS",
  "private": true,
  "scripts": {
    "dev": "./scripts/dev-server.sh",
    "dev:next": "next dev",
    "dev:cloudflare": "wrangler pages dev .vercel/output/static --compatibility-date=2024-12-01",
    "stop": "./scripts/stop-dev.sh",
    "cleanup": "./scripts/cleanup-dev.sh",
    "build": "next build",
    "build:cloudflare": "next build && npx @opennextjs/cloudflare build",
    "start": "next start",
    "lint": "next lint",
    "preview:cloudflare": "npm run build:cloudflare && wrangler pages dev .open-next",
    "deploy:cloudflare": "npm run build:cloudflare && wrangler pages deploy .open-next --project-name monogs --branch=preview --commit-dirty=true",
    "deploy:cloudflare:production": "npm run build:cloudflare && wrangler pages deploy .open-next --project-name monogs --branch main --commit-dirty=true",
    "extract": "node scripts/extract-ghost-data.js",
    "convert": "node scripts/convert-mobiledoc.js",
    "update-urls": "node scripts/update-image-urls.js",
    "upload-r2": "node scripts/upload-to-r2.js",
    "seed-d1": "node scripts/seed-d1.js",
    "migrate:extract": "npm run extract -- --db ../ghost/content/data/ghost-dev.db --output ./migration-data/",
    "migrate:convert": "npm run convert -- --input ./migration-data/posts.json --output ./migration-data/posts-converted.json",
    "migrate:update": "npm run update-urls -- --posts ./migration-data/posts-converted.json --mapping ./migration-data/image-mapping.json --output ./migration-data/posts-final.json",
    "migrate:all": "npm run migrate:extract && npm run migrate:convert && npm run migrate:update",
    "db:generate": "drizzle-kit generate",
    "db:init:local": "tsx scripts/init-local-db.ts",
    "db:seed:local": "tsx scripts/seed-local-db.ts",
    "db:migrate:d1:local": "wrangler d1 migrations apply monogs-db --local",
    "db:migrate:d1:prod": "wrangler d1 migrations apply monogs-db",
    "db:seed:d1:local": "npm run seed-d1 -- --input ./migration-data/ --database monogs-db --local",
    "db:seed:d1:prod": "npm run seed-d1 -- --input ./migration-data/ --database monogs-db",
    "db:studio": "drizzle-kit studio",
    "db:setup": "npm run db:init:local && npm run db:seed:local",
    "storage:migrate": "node scripts/migrate-images-to-storage.js",
    "storage:up": "docker compose up -d",
    "storage:down": "docker compose down",
    "storage:logs": "docker compose logs -f minio",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "ghost",
    "nextjs",
    "cloudflare",
    "migration"
  ],
  "author": "monogs",
  "license": "MIT",
  "dependencies": {
    "@auth/drizzle-adapter": "^1.7.3",
    "@aws-sdk/client-s3": "^3.946.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@uiw/react-md-editor": "^4.0.11",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.36.4",
    "marked": "^17.0.1",
    "next": "^16.0.7",
    "next-auth": "^5.0.0-beta.30",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.14.4",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^4.0.15",
    "better-sqlite3": "^11.10.0",
    "drizzle-kit": "^0.30.0",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.3",
    "glob": "^11.0.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vercel": "^39.2.4",
    "vitest": "^4.0.15",
    "wrangler": "^4.53.0"
  }
}