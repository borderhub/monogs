# Storage Configuration
# ストレージタイプ: "minio" (ローカル開発) または "r2" (本番環境)
STORAGE_TYPE=r2

# Cloudflare R2 Configuration (本番環境用)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET=monogs-images
R2_PUBLIC_URL=https://images.monogs.net

# Next.js Public URL (画像表示用)
# R2の場合: https://images.monogs.net
NEXT_PUBLIC_IMAGES_URL=https://images.monogs.net

# NextAuth
NEXTAUTH_URL=https://monogs.net
NEXTAUTH_SECRET=your-secret-key-here-change-in-production

# Database Configuration
# 本番環境: Cloudflare D1
DB_TYPE=d1
DATABASE_URL=your-d1-database-url
# D1 Database ID (wrangler.tomlで設定)
D1_DATABASE_ID=your-d1-database-id
